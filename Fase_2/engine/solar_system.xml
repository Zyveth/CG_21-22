<world> <!-- a world can have a camera, a set of lights, and a single group -->
    <camera> 
	    <position x="350" y="250" z="100" />
	    <lookAt x="350" y="150" z="0" />
	    <up x="0" y="1" z="0" /> <!-- optional, use these values as default-->
        <projection fov="60" near="1" far="3000" /> <!-- optional, use these values as default-->
    </camera>

    <group> 
        <transform> 
		    <translate x="0" y="150" z="0" />
        </transform>
        <group> <!-- Sun -->
            <transform>
                <scale x="150" y="150" z="150" />
            </transform>
            <models> 
                <model file="sphere.3d" /> 
            </models>
        </group>
        <group> <!-- Mercury -->
            <transform>
                <translate x="205" y="0" z="0" />
